<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/theimage1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/theline11"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/theline12"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/theimage2"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/theline21"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/theline22"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/theimage3"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/theline31"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/theline32"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>